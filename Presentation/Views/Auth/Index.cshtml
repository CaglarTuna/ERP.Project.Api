
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}
<style>
    .ExMessage{
        color:red;
        text-align:right;
    }
</style>
<div id="formContent" style="margin:auto;max-width:500px;margin-top:100px;">


    <div style="        padding-top: 30px;
        padding-bottom: 30px;
        color: #f4313f
" id="formFooter">
        <b>Tezpar ERP</b>

    </div>
    <form asp-controller="Auth" asp-action="Login"
          data-ajax-success="onSuccess"
          data-ajax="true" data-ajax-method="POST" autocomplete="off">
        <div class="row" style="padding-right:50px;padding-left:50px;">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12" style="margin-top:15px;">

                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12" style="margin-top:15px;">
                    <div class="row">
                        <div class="col-lg-4 col-md-4 col-sm-4 col-xs-4" style="text-align: left;color: #f4313f">Kullanıcı Adı :</div>
                        <div class="col-lg-8 col-md-8 col-sm-8 col-xs-8">
                            <input type="text" name="Email" class="form-control" value="" />
                        </div>
                    </div>
                    <div style="margin-top:15px;" class="row">
                        <div class="col-lg-4 col-md-4 col-sm-4 col-xs-4" style="text-align: left;color: #f4313f">Şifre :</div>
                        <div class="col-lg-8 col-md-8 col-sm-8 col-xs-8">
                            <input type="password" name="Password" class="form-control" value="" />
                        </div>
                    </div>
                    <div class="col-12">
                        <div class="col-md-2"></div>
                        <div class="col-md-10 ExMessage"><span class="">@ViewBag.message</span></div>
                    </div>

                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12" style="margin-top:15px;margin-bottom:20px">
                        <div class="row">
                            <div class="col-lg-2 col-md-2 col-sm-2 col-xs-2"> </div>
                            <div class="col-lg-10 col-md-10 col-sm-10 col-xs-10">
                                <button style="float: left;margin-left: 140px" type="submit" class="btn btn-info">
                                    Giriş Yap
                                </button>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </form>
</div>
