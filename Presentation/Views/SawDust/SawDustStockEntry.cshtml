@model SawDustResponseModel
@{
    ViewData["Title"] = "SawDustStockEntry";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="wrapper wrapper-content animated fadeInRight mt60">
    <div class="row">
        <div class="col-lg-12">
            <fieldset class="fieldset">
                <legend class="fieldsetb">Talaş Stok Girişi</legend>
                <form asp-controller="SawDust" asp-action="SawDustStockEntryAdd" autocomplete="off" method="post">
                    <div class="row">
                        <div class="col-lg-4 col-md-4 col-sm-4 col-xs-4">
                            <label class="control-label">Sipariş No :</label>
                        </div>
                        <div class="col-lg-8 col-md-8 col-sm-8 col-xs-8">
                            <select data-placeholder="Seçiniz" name="OrderNo" class="chosen-select">
                                <option value=""></option>
                                @foreach (var item in Model.Orders)
                                {
                                    <option value="@item.Id">@item.OrderNo</option>
                                }
                            </select>
                        </div>
                    </div>
                    <div class="row" style="margin-top: 3%;">
                        <div class="col-lg-4 col-md-4 col-sm-4 col-xs-4">
                            <label class="control-label">Malzeme Adı :</label>
                        </div>
                        <div class="col-lg-8 col-md-8 col-sm-8 col-xs-8">
                            <select data-placeholder="Seçiniz" name="MaterialId" class="chosen-select">
                                <option value=""></option>
                                @foreach (var item in Model.Materials)
                                {
                                    <option value="@item.Id">@item.Name</option>
                                }
                            </select>
                        </div>
                    </div>
                    <div class="row" style="margin-top: 3%;">
                        <div class="col-lg-4 col-md-4 col-sm-4 col-xs-4">
                            <label class="control-label">Adet / Miktar :</label>
                        </div>
                        <div class="col-lg-8 col-md-8 col-sm-8 col-xs-8">
                            <input type="text" name="Quantity" class="inpt-charter">
                        </div>
                    </div>
                    <div class="row" style="margin-top: 3%;">
                        <div class="col-lg-4 col-md-4 col-sm-4 col-xs-4">
                            <label class="control-label">İade Sebbi: </label>
                        </div>
                        <div class="col-lg-8 col-md-8 col-sm-8 col-xs-8">
                            <select data-placeholder="Seçiniz" asp-items="Html.GetEnumSelectList<DTO.Enums.ReasonForReturn>()" name="ReturnReasonId" class="chosen-select">
                                <option value=""></option>
                            </select>
                        </div>
                    </div>
                    <div class="row" style="margin-top: 3%;">
                        <div class="col-lg-4 col-md-4 col-sm-4 col-xs-4">
                            <label class="control-label">Depo Adı: </label>
                        </div>
                        <div class="col-lg-8 col-md-8 col-sm-8 col-xs-8">
                            <select data-placeholder="Seçiniz" name="StoreId" class="chosen-select">
                                <option value=""></option>
                                @foreach (var item in Model.Stores)
                                {
                                    <option value="@item.Id">@item.Name</option>
                                }
                            </select>
                        </div>
                    </div>
                    <div class="row" style="margin-top: 3%;">
                        <div class="col-lg-4 col-md-4 col-sm-4 col-xs-4">
                            <label class="control-label">Depodaki Adresi :</label>
                        </div>
                        <div class="col-lg-8 col-md-8 col-sm-8 col-xs-8">
                            <input type="text" name="SawdustStockAddress" class="inpt-charter">
                        </div>
                    </div>
                    <div class="row" style="margin-top:3%;">
                        <div class="col-lg-12 col-md-12 col-md-12 col-xs-12">
                            <button style=" float: right"
                                    type="submit" class="btn btn-info">
                                KAYDET
                            </button>
                        </div>
                    </div>
                </form>
            </fieldset>
        </div>
    </div>
</div>