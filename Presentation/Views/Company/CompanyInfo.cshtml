@model CompanyDTO
@{
    ViewData["Title"] = "Firma Bilgileri";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="wrapper wrapper-content animated fadeInRight mt60">
    <div class="tabs-container">
        <ul class="nav nav-tabs tab-border-top-danger">
            <li class="active"><a asp-controller="Company" asp-action="CompanyInfo" asp-route-id="@Model.Id">Firma Bilgileri</a></li>
            <li class=""><a asp-controller="Company" asp-action="CompanyManagementAdress" asp-route-id="@Model.Id">Firma Adres Bilgileri</a></li>
            <li class=""><a asp-controller="Company" asp-action="CompanyOrderHistory" asp-route-id="@Model.Id">Firma Sipariş Geçmişi</a></li>
            <li class=""><a asp-controller="Company" asp-action="CompanyMaterialCertificate" asp-route-id="@Model.Id">Firma Malzeme Sertifikaları</a></li>
        </ul>
        <div class="tab-content" style="margin-top:20px">
            <div id="tab-1" class="tab-pane active">
                <fieldset class="fieldset">
                    <legend class="fieldsetb">Firma Bilgileri</legend>
                    <div class="row">
                        <div class="col-xs-12">
                            <div class="form-group cf">
                                <label class="col-xs-2 control-label" style="color:black">Firma Adı</label>
                                <div class="col-xs-10">
                                    @Model.Name
                                </div>
                            </div>
                            <div class="form-group cf">
                                <label class="col-xs-2 control-label" style="color:black">Firma Prefix</label>
                                <div class="col-xs-10">
                                    @Model.Prefix
                                </div>
                            </div>
                            <div class="form-group cf">
                                <label class="col-xs-2 control-label" style="color:black">Statü</label>
                                <div class="col-xs-10">
                                    @if (Model.Status == 1)
                                    {
                                        <span> Aktif</span>
                                    }
                                    else
                                    {
                                        <span>Pasif</span>
                                    }
                                </div>
                            </div>
                            <div class="form-group cf">
                                <label class="col-xs-2 control-label" style="color:black">Vergi Numarası</label>
                                <div class="col-xs-10">
                                    @Model.TaxNumber
                                </div>
                            </div>
                            <div class="form-group cf">
                                <label class="col-xs-2 control-label" style="color:black">Vergi Dairesi</label>
                                <div class="col-xs-10">
                                    @Model.TaxOffice
                                </div>
                            </div>
                            <div class="form-group cf">
                                <label class="col-xs-2 control-label" style="color:black">Ünvan/Departman</label>
                                <div class="col-xs-10">
                                    @Model.Department
                                </div>
                            </div>
                            <div class="form-group cf">
                                <label class="col-xs-2 control-label" style="color:black">Kontak Kişi</label>
                                <div class="col-xs-10">
                                    @Model.ContactPerson
                                </div>
                            </div>
                            <div class="form-group cf">
                                <label class="col-xs-2 control-label" style="color:black">Email</label>
                                <div class="col-xs-10">
                                    @Model.Email
                                </div>
                            </div>
                            <div class="form-group cf">
                                <label class="col-xs-2 control-label" style="color:black">Cep Telefonu</label>
                                <div class="col-xs-10">
                                    @Model.Phone
                                </div>
                            </div>
                            <div class="form-group cf">
                                <label class="col-xs-2 control-label" style="color:black">İş Telefonu</label>
                                <div class="col-xs-10">
                                    @Model.Telephone
                                </div>
                            </div>
                        </div>
                    </div>
                </fieldset>
            </div>
        </div>
    </div>
</div>
