@model CompanyDTO
@{
    ViewData["Title"] = "CompanyManagementAdress";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="wrapper wrapper-content animated fadeInRight mt60">
    <div class="tabs-container">
        <ul class="nav nav-tabs tab-border-top-danger">
            <li class=""><a asp-controller="Company" asp-action="CompanyInfo" asp-route-id="@Model.Id">Firma Bilgileri</a></li>
            <li class="active"><a asp-controller="Company" asp-action="CompanyManagementAdress" asp-route-id="@Model.Id">Firma Adres Bilgileri</a></li>
            <li class=""><a asp-controller="Company" asp-action="CompanyOrderHistory" asp-route-id="@Model.Id">Firma Sipariş Geçmişi</a></li>
            <li class=""><a asp-controller="Company" asp-action="CompanyMaterialCertificate" asp-route-id="@Model.Id">Firma Malzeme Sertifikaları</a></li>
        </ul>
        <div class="tab-content" style="margin-top:20px">

            <div id="tab-1" class="tab-pane active">
                <fieldset class="fieldset">
                    <legend class="fieldsetb">Adresler</legend>
                    @foreach (var item in Model.CompanyAddressDTOs)
                    {
                        <div class="row">
                            <div class="col-xs-12">

                                <div class="form-group cf">
                                    <label class="col-xs-2 control-label" style="color:black">Adres Başlığı</label>
                                    <div class="col-xs-10">
                                        @item.AddressTitle
                                    </div>
                                </div>
                                <div class="form-group cf">
                                    <label class="col-xs-2 control-label" style="color:black">Ülke </label>
                                    <div class="col-xs-10">
                                        Türkiye
                                    </div>
                                </div>
                                <div class="form-group cf">
                                    <label class="col-xs-2 control-label" style="color:black">İl</label>
                                    <div class="col-xs-10">
                                        İstanbul
                                    </div>
                                </div>
                                <div class="form-group cf">
                                    <label class="col-xs-2 control-label" style="color:black">Posta Kodu</label>
                                    <div class="col-xs-10">
                                        @item.PostCode
                                    </div>
                                </div>
                                <div class="form-group cf">
                                    <label class="col-xs-2 control-label" style="color:black">Adres </label>
                                    <div class="col-xs-10">
                                        @item.Address
                                    </div>
                                </div>

                            </div>
                        </div>
                        <br />
                    }
                   
                </fieldset>
            </div>
        </div>
    </div>
</div>