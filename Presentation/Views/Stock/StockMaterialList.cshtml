@model List<MaterialStockDTO>
@{
    ViewData["Title"] = "StockMaterialList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="wrapper wrapper-content animated fadeInRight mt60">
    <div class="row">
        <div class="col-lg-12">
            <fieldset class="fieldset">
                <legend class="fieldsetb">Filtreleme Alanı</legend>

                <div class="row">
                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                        <div class="row">
                            <form asp-controller="Stock" asp-action="StockMaterialList" autocomplete="off" method="post">
                                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                    <input type="text" name="filtre" class="inpt-charter" placeholder="Giriniz...">
                                </div>
                                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                    <button style=" float: right;margin-top:10px" type="submit" class="btn-charter-p m-b">
                                        FİLTRELE
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>

            </fieldset>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <fieldset class="fieldset">
                <legend class="fieldsetb">Stoktaki Malzeme Listesi</legend>
                <div class="row">
                    <div class="col-xs-12">
                        <div class="table-responsive mb10">
                            <table class="table table-striped table-bordered table-hover dataTables dataTable ">
                                <thead>
                                    <tr>
                                        <th>Stok No</th>
                                        <th>Stok Miktarı</th>

                                        <th>Malzeme No</th>
                                        <th>Malzeme Adı</th>
                                        <th>Birim Ölçü</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.OrderByDescending(x => x.Id))
                                    {
                                        <tr>
                                            <td>@item.Materials.StockNo</td>
                                            <td>@item.Quantity</td>
                                            <td>@item.Materials.BarcodeNo</td>
                                            <td>@item.Materials.Name</td>
                                            <td>
                                                @if (item.Materials.HeightMeasureDTO != null)
                                                {
                                                    <span>@item.Materials.HeightMeasureDTO.Name</span>
                                                }
                                                else
                                                {
                                                    <span>-</span>
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                    </div>
                </div>
            </fieldset>
        </div>
    </div>
</div>