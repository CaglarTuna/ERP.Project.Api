@model ProductDTO
@{
    ViewData["Title"] = "GetSpecialProductDetail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="wrapper wrapper-content animated fadeInRight mt60">
    <div class="row">
        <div class="col-lg-12">
            <div class="tabs-container">
                <div class="tab-content">
                    <div id="tab-1" class="tab-pane active">
                        <div class="panel-body">
                            <fieldset class="fieldset">
                                <legend class="fieldsetb">Benzersiz Ürün Detayı</legend>
                                <div class="row">
                                    <div class="col-xs-12">
                                        <div class="form-group cf">
                                            <label class="col-xs-3 control-label" style="color:black">Ürün Kategorisi</label>
                                            <div class="col-xs-9">
                                                @Model.Categories.CategoryLanguageDTOs.FirstOrDefault().Name
                                            </div>
                                        </div>

                                        <div class="form-group cf">
                                            <label class="col-xs-3 control-label" style="color:black">Ürün Adı</label>
                                            <div class="col-xs-9">
                                                @Model.Name
                                            </div>
                                        </div>

                                        <div class="form-group cf">
                                            <label class="col-xs-3 control-label" style="color:black">Üretim Tarihi</label>
                                            <div class="col-xs-9">
                                                @Model.CreateDate
                                            </div>
                                        </div>

                                        <div class="col-md-12 col-sm-12 " style="margin-top: 3%">
                                            <div class="table table-bordered" style="overflow:scroll">
                                                <table class="table">
                                                    <tr>
                                                        <th>Kulanılan Malzeme Adı</th>
                                                        <th>Tedarik Edildiği Firma</th>
                                                        <th>Tedarik Edildiği Tarih</th>
                                                        <th>Adet/Miktar</th>
                                                    </tr>
                                                    @foreach (var item in Model.productMaterialDTOs)
                                                    {
                                                        <tr>
                                                            <td>@item.Materials.Name</td>
                                                            <td>@*@item.Materials.materialSuppliers.FirstOrDefault().company.Name*@</td>
                                                            <td>@item.CreateDate</td>
                                                            <td>@item.Count</td>
                                                        </tr>
                                                    }
                                                </table>
                                            </div>
                                        </div>


                                        <div class="col-md-12 col-sm-12 " style="margin-top: 3%">
                                            <div class="table table-bordered" style="overflow:scroll">
                                                <table class="table">
                                                    <tr>
                                                        <th>Yapılan İşlem</th>
                                                        <th>İşlemi Yapan Usta</th>
                                                        <th>İşlemin Yapılma Tarihi</th>
                                                        <th>İşlemin Yapılma Süresi</th>
                                                    </tr>
                                                    @foreach (var item in Model.productProcessDTOs)
                                                    {
                                                        <tr>
                                                            <td>@item.Process.ProcessLanguage.FirstOrDefault().Name</td>
                                                            <td>@*@item.Process.StaffProcess.FirstOrDefault().StaffDTO.Name*@</td>
                                                            <td>@item.CreateDate</td>
                                                            <td>@item.ProcessDuration</td>
                                                        </tr>
                                                    }
                                                </table>
                                            </div>
                                        </div>
                                        @if (Model.productDocumentDTOs.Count > 0)
                                        {
                                            <div class="form-group cf">
                                                <label class="col-xs-3 control-label" style="color:black">Teknik Resim</label>
                                                <div class="col-xs-9">
                                                    <img src="~/Images/@Model.productDocumentDTOs.FirstOrDefault(x=>x.Document.Type==".jpg"||x.Document.Type==".png").Document.Name" />
                                                </div>
                                            </div>
                                        }
                                        @if (Model.productDocumentDTOs.Count > 0)
                                        {
                                            <div class="form-group cf">
                                                <label class="col-xs-3 control-label" style="color:black">Teknik Pdf</label>
                                                <div class="col-xs-9">
                                                    <a href="~/Documents/@Model.productDocumentDTOs.FirstOrDefault(x=>x.Document.Type==".pdf").Document.Name" target="_blank">Teknik Pdf için Tıklayınız...</a>
                                                </div>
                                            </div>
                                        }
                                        @*<div class="form-group cf">
                                            <label class="col-xs-3 control-label" style="color:black">Açıklama</label>
                                            <div class="col-xs-9">
                                                Açıklama.......
                                            </div>
                                        </div>*@
                                    </div>
                                </div>
                            </fieldset>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>