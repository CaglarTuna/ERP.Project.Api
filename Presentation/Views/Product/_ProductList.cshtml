@model List<ProductDTO>
@foreach (var item in Model.OrderByDescending(x => x.Id))
{
    <tr>
        <td><a asp-controller="Product" asp-action="productPrescriptionManagement" asp-route-id="@item.Id" class="btn btn-info">Detay Gör</a> </td>
        <td><a asp-controller="Product" asp-action="EditProductRecipe" asp-route-id="@item.Id" class="btn btn-info">Düzenle</a> </td>
        @if (item.ProductType != 1)
        {
            <td>Özel Ürün</td>
        }
        else
        {
            <td>Standart Ürün</td>
        }
        <td>@item.ProductionSerialNumber</td>
        <td>
            @foreach (var item2 in item.Categories.CategoryLanguageDTOs.Take(1))
            {
                <span>@item2.Name</span>
            }
        </td>
        <td>@item.Name</td>
        <td>@item.ProductCost</td>
    </tr>
}