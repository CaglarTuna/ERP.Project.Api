@model List<SpeacialProductDescriptionDTO>
@{
    ViewData["Title"] = "SpecialProductPrescriptionsList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="wrapper wrapper-content animated fadeInRight mt60">
    <div class="tabs-container">
        <ul class="nav nav-tabs tab-border-top-danger">
            <li class=""><a asp-controller="Product" asp-action="ProductManagement"> Ürün Reçeteleri&amp;Ürün Reçetesi Oluşturma</a></li>
            <li class="active"><a asp-controller="Product" asp-action="SpecialProductPrescriptionsList">Ürün Reçetesi Oluşturulacaklar Listesi</a></li>
        </ul>
        <div class="tab-content" style="margin-top:20px">

            <div id="tab-1" class="tab-pane active">
                <div class="row">
                    <div class="col-lg-12">
                        <form asp-controller="Product" asp-action="SpecialProductPrescriptionsList" method="post" autocomplete="off">
                            <fieldset class="fieldset">
                                <legend class="fieldsetb">Filtreleme Alanı</legend>
                                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                    <input type="text" name="filtre" placeholder="Giriniz..." class="inpt-charter">
                                </div>

                                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                    <button style=" float: right;margin-top:10px"
                                            type="submit" class="btn-charter-p m-b">
                                        FİLTRELE
                                    </button>
                                </div>
                            </fieldset>
                        </form>
                    </div>
                </div>


                <!--LİSTE ALANI-->
                <div class="row">
                    <div class="col-lg-12">
                        <fieldset class="fieldset">
                            <legend class="fieldsetb">Özel Ürün Reçetesi Tanımlanacaklar Listesi</legend>
                            <div class="row">
                                <div class="col-xs-12">
                                    <div class="table-responsive mb10">
                                        <table class="table table-striped table-bordered table-hover dataTables dataTable ">
                                            <thead>
                                                <tr>
                                                    <th>Ürün Reçetesi Tanımla</th>
                                                    <th>Özel Ürün Adı</th>
                                                    <th>Özel Ürün Adeti</th>
                                                    <th>Özel Ürün Açıklaması</th>

                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var item in Model.OrderByDescending(x=>x.Id).Where(x=>x.Status==1))
                                                {
                                                    <tr>
                                                        <td><a asp-controller="Product" asp-action="SpecialProductPrescriptionsAdd" asp-route-id="@item.Id" class="btn btn-info">Tanımla</a> </td>
                                                        <td>@item.Name</td>
                                                        <td>@item.Quantitiy</td>
                                                        <td>@item.SpecialProductDescription</td>
                                                    </tr>
                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                    
                                </div>
                            </div>
                        </fieldset>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

