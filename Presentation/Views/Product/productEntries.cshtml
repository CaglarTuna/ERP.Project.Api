@model List<OrderDTO>
@{
    ViewData["Title"] = "productEntries";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="wrapper wrapper-content animated fadeInRight mt60">

    <!--FILTER AREA-->
    <div class="row">
        <div class="col-lg-12">
            <fieldset class="fieldset">
                <legend class="fieldsetb">Filtreleme Alanı</legend>
                <!--SEARCH AREA-->
                <form asp-controller="Product" asp-action="productEntries" autocomplete="off" method="post">
                    <div class="row">
                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                            <input type="text" name="filtre" class="inpt-charter" placeholder="Giriniz...">
                        </div>
                    </div>
                    <div class="row" style="margin-top:20px">
                        <!--FİLTER BUTTON AREA-->
                        <div class="col-lg-12 col-md-12 col-md-12 col-xs-12">
                            <button style=" float: right" type="submit" class="btn-charter-p m-b">FİLTRELE</button>
                        </div>
                    </div>
                </form>
            </fieldset>
        </div>
    </div>


    <!--LİSTE ALANI-->
    <div class="row">
        <div class="col-lg-12">
            <fieldset class="fieldset">
                <legend class="fieldsetb">Sipariş Listesi</legend>
                <div class="row">
                    <div class="col-xs-12">
                        <div class="table-responsive mb10">
                            <table class="table table-striped table-bordered table-hover dataTables dataTable ">
                                <thead>
                                    <tr>
                                        <th>Siparişteki Ürünlerin Girişini Yap</th>
                                        <th>Sipariş No</th>
                                        <th>Müşteri Sipariş No</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.OrderByDescending(x => x.Id))
                                    {
                                        <tr>
                                            <td><a asp-controller="Product" asp-action="ProductStockEntry" asp-route-id="@item.Id" class="btn btn-info">Ürünlere Git</a></td>
                                            <td>@item.OrderNo</td>
                                            <td>@item.OrderCustomerNo</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </fieldset>
        </div>
    </div>
</div>