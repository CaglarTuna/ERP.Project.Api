@model List<StaffDTO>
@{
    ViewData["Title"] = "Staff";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="wrapper wrapper-content animated fadeInRight mt60">
    <div class="row">
        <div class="col-lg-12">
            <fieldset class="fieldset">
                <legend class="fieldsetb">Filtreleme Alanı</legend>
                <form asp-controller="Staff" asp-action="Staff" method="post" autocomplete="off">
                    <div class="row">
                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                            <input type="text" name="filtre" class="inpt-charter" placeholder="Giriniz...">
                        </div>
                    </div>
                    <div class="row" style="margin-top:20px">
                        <div class="col-lg-12 col-md-12 col-md-12 col-xs-12">
                            <button style=" float: right" type="submit" class="btn-charter-p m-b">FİLTRELE</button>
                        </div>
                    </div>
                </form>

            </fieldset>
        </div>
    </div>


    <!--LİSTE ALANI-->
    <div class="row">
        <div class="col-lg-12">
            <fieldset class="fieldset">
                <legend class="fieldsetb">Personel Listesi</legend>
                <div class="row">
                    <div class="col-xs-12">
                        <div class="table-responsive mb10">
                            <table class="table table-striped table-bordered table-hover dataTables dataTable ">
                                <thead>
                                    <tr>
                                        <th>Detay Gör</th>
                                        <th>Personel Adı Soyadı </th>
                                        <th>Email</th>
                                        <th>Telefon</th>
                                        <th>Departman</th>
                                        <th>Rol/Roller</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.OrderByDescending(x=>x.Id))
                                    {
                                        <tr>
                                            <td><a asp-controller="Staff" asp-action="StaffInfo" asp-route-id="@item.Id" class="btn btn-info">Detay Gör</a> </td>
                                            <td>@item.Name @item.Surname</td>
                                            <td>@item.Email</td>
                                            <td>@item.Telephone</td>
                                            <td>@item.Department</td>
                                            <td>
                                                @foreach (var roles in item.StaffRolesDTO)
                                                {
                                                    <span>@roles.Roles.Name  </span>
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </fieldset>
        </div>
    </div>
</div>
