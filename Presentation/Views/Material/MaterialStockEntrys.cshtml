@model List<MaterialStockDTO>
@{
    ViewData["Title"] = "MaterialStockEntrys";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="wrapper wrapper-content animated fadeInRight mt60">
    <div class="row">
        <div class="col-lg-12">
            <fieldset class="fieldset">
                <legend class="fieldsetb">Filtreleme Alanı</legend>
                <div class="row">
                    <form asp-controller="Material" asp-action="MaterialStockEntrys" autocomplete="off" method="post">
                        <div class="col-lg-11 col-md-11 col-sm-10 col-xs-10">
                            <div class="row">
                                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                    <input type="text" name="filtre"
                                           class="inpt-charter" placeholder="Giriniz...">
                                </div>
                                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                    <button style=" float: right;margin-top:10px"
                                            type="submit" class="btn-charter-p m-b">
                                        FİLTRELE
                                    </button>
                                </div>
                            </div>
                        </div>
                    </form>
                    <div class="col-lg-1 col-md-1 col-sm-2 col-xs-2">
                        <a asp-controller="Material" asp-action="AddMateialStockEntys">
                            <i data-toggle="modal" data-target="#MdlAddProcess"
                               class="fa fa-plus-square" style="font-size:35px; cursor: pointer; float:right"></i>
                        </a>
                    </div>
                </div>

            </fieldset>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <fieldset class="fieldset">
                <legend class="fieldsetb">Malzeme Girişleri Listesi</legend>
                <div class="row">
                    <div class="col-xs-12">
                        <div class="table-responsive mb10">
                            <table class="table table-striped table-bordered table-hover dataTables dataTable ">
                                <thead>
                                    <tr>
                                        <th>Tedarik Edilen Firma</th>
                                        <th>Depo Adı</th>
                                        <th>Malzemenin Adresi</th>
                                        <th>Tedarik Edilen Adet</th>
                                        <th>Tedarik Tarihi</th>
                                        <th>Barkod/Fatura No</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.OrderByDescending(x=>x.Id))
                                    {
                                        <tr>
                                            <td>@item.Companies.Name</td>
                                            <td>@item.Stores.Name</td>
                                            <td>@item.MaterialAdress</td>
                                            <td>@item.Quantity adet</td>
                                            <td>@item.EntryDate</td>
                                            <td>@item.InvoiceNo</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </fieldset>
        </div>
    </div>
</div>