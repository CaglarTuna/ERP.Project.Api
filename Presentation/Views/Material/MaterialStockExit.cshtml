@model List<MaterialExpertDeliverysDTO>
@{
    ViewData["Title"] = "MaterialStockExit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="wrapper wrapper-content animated fadeInRight mt60">
    <div class="row">
        <div class="col-lg-12">
            <form asp-controller="Material" asp-action="MaterialStockExit" autocomplete="off" method="post">
                <fieldset class="fieldset">
                    <legend class="fieldsetb">Filtreleme Alanı</legend>
                    <div class="row">
                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                            <input type="text" name="filtre" class="inpt-charter" placeholder="Giriniz...">
                        </div>
                    </div>
                    <div class="row" style="margin-top:20px">
                        <div class="col-lg-12 col-md-12 col-md-12 col-xs-12">
                            <button style=" float: right" type="submit" class="btn-charter-p m-b">FİLTRELE</button>
                        </div>
                    </div>
                </fieldset>
            </form>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <fieldset class="fieldset">
                <legend class="fieldsetb">Depodan Malzeme Çıkışları Listesi</legend>
                <div class="row">
                    <div class="col-xs-12">
                        <div class="table-responsive mb10">
                            <table class="table table-striped table-bordered table-hover dataTables dataTable ">
                                <thead>
                                    <tr>
                                        <th>Teslim Edilen Usta</th>
                                        <th>Malzeme Adı</th>
                                        <th>Birim Ölçüsü</th>
                                        <th>Teslim Edilen Adet</th>
                                        <th>Teslim Tarihi</th>
                                        <th>Teslimat Notu</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.OrderByDescending(x=>x.Id))
                                    {
                                        <tr>
                                            <td>@item.Staffs.Name</td>
                                            <td>@item.Materials.Name</td>
                                            @if (item.Materials.MaterialHeightMeasureDTOs.Count > 0)
                                            {
                                                <td>@item.Materials.MaterialHeightMeasureDTOs.FirstOrDefault().HeightMeasures.Name</td>
                                            }
                                            else
                                            {
                                                <td></td>
                                            }
                                            @*<td></td>*@
                                            <td>@item.Quantity adet</td>
                                            <td>@item.CreateDate</td>
                                            <td>@item.DeliveryNote</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </fieldset>
        </div>
    </div>
</div>