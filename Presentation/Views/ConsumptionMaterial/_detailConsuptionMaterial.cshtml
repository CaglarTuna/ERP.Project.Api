@model ConsumptionMaterialDTO

<div class="row">
    <div class="col-lg-12">
        <div class="row">
            <div class="col-xs-12">
                <div class="form-group cf">
                    <label class="col-xs-4 control-label" style="color:black">Sarf Malzeme Kodu</label>
                    <div class="col-xs-8">
                        @Model.Code
                    </div>
                </div>
                <div class="form-group cf">
                    <label class="col-xs-4 control-label" style="color:black">Sarf Malzeme Adı</label>
                    <div class="col-xs-8">
                        @Model.Name
                    </div>
                </div>
                <div class="form-group cf">
                    <label class="col-xs-4 control-label" style="color:black">Birimi</label>
                    <div class="col-xs-8">
                        @Model.UnitsOfMeasure.Name
                    </div>
                </div>
                <div class="form-group cf">
                    <label class="col-xs-4 control-label" style="color:black">Maliyet</label>
                    <div class="col-xs-8">
                        @Model.CostPrice @Model.Currencies.Name
                    </div>
                </div>
                <div class="form-group cf">
                    <label class="col-xs-4 control-label" style="color:black">Tedarikçi Firmalar</label>
                    <div class="col-xs-8">
                        @foreach (var item in Model.ConsumptionMaterialSuppliers)
                        {
                            <span>@item.Companies.Name</span>
                        }
                    </div>
                </div>
                <div class="form-group cf">
                    <label class="col-xs-4 control-label" style="color:black">Minimum Stok Miktarı</label>
                    <div class="col-xs-8">
                        @Model.MinStockQuantity
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>