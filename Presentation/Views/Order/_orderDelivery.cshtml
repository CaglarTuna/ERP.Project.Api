@model OrderDTO
<form asp-controller="Order" asp-action="OrderDeliver"
                      data-ajax-success="onSuccesss" 
                      data-ajax="true" data-ajax-method="POST" autocomplete="off">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"
                        aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title" id="myModalLabel">Teslim Et</h4>
            </div>
            <input type="hidden" name="Id" value="@Model.Id" />
            <div class="modal-body">
                <div class="row">
                    <div class="col-lg-4 col-md-4 col-sm-4 col-xs-4">
                        <label class="control-label">Teslim Alan :</label>
                    </div>

                    <div class="col-lg-8 col-md-8 col-sm-8 col-xs-8">
                        <input type="text" name="Receiver" class="inpt-charter">
                    </div>
                </div>

                <div class="row" style="margin-top:3%">
                    <div class="col-lg-4 col-md-4 col-sm-4 col-xs-4">
                        <label class="control-label">Teslim Etme Notu :</label>
                    </div>

                    <div class="col-lg-8 col-md-8 col-sm-8 col-xs-8">
                        <textarea name="DeliveryNote" rows="8" cols="40" class="inpt-charter"></textarea>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="submit" class="btn btn-primary" style="margin-right:12px">KAYDET</button>
            </div>
        </div>
    </div>
</form>
